<h1>Ficha de inmueble</h1>
<% if (inmueble) {  %>
    <div class="card mb-3">
        <img class="card-img-top" src="/uploads/<%= inmueble.imagen %>" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><%= inmueble.tipo.tipo %></h5>
            <p class="card-text"><%= inmueble.descripcion %></p>
            <p class="card-text">Superficie: <%= inmueble.superficie %></p>
            <p class="card-text">Habitaciones: <%= inmueble.numeroHabitaciones %></p>
            <p class="card-text">Precio: <%= inmueble.precio %>€</p>
        </div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Borrar inmueble
        </button>
        <div class="card-footer">
            <p class="card-text text-muted">Referencia: <span id="referencia"><%= inmueble.id %></span></p>
        </div>
    </div>

<!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Borrar inmueble</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body" id="modal-body">
                ¿Seguro que desea eliminar el inmueble?
            </div>
            <div class="modal-footer" id="modal-buttons">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-danger" onclick="eliminar()">Eliminar</button>
            </div>
          </div>
        </div>
    </div>

<% } else { %>
    <p>No se ha encontrado el inmueble</p>
<% } %>

